@model TesePortal.Models.Request.Demand


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Заполните форму заявки</h3>
        <hr />


        <h4 class = "col-lg-12">Рабочий центр: @ViewBag.WorkItem.Name</h4>

        <input type="hidden" name="Id" value="@ViewBag.WorkItem.Id" />
         
        <div class="form-group">
            @Html.Label("Узел рабочего центра:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.WorkItemNodeId, new SelectList(ViewBag.WorkItem.WorkItemNodes, "Id", "Name"))

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CommentOfOperator, "Комментарий оператора", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.CommentOfOperator, 10, 42, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsCritical, "Срочная заявка", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsCritical)

                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Отправить заявку" class="btn btn-default" />
            </div>
        </div>
    </div>
}

